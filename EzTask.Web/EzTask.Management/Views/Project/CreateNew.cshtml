
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EzTask.Management.Models.Project.ProjectModel
@section header{
    <h1>
        Project
        <small>Create new project on EzTask</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a asp-action="Index" asp-controller="Project">Project</a></li>
        <li class="active">Create new</li>
    </ol>
}
<div class="box box-primary">
    <div class="box-header with-border">

        @if (Model.ProjectId < 1)
        {
            if (Model.HasError)
            {
                <i class="fa fa-circle text-red"></i>
                <h3 class="box-title">@Html.PrintErrorMessage()</h3>
            }
            else
            {
                <i class="fa fa-circle text-yellow"></i>
                <h3 class="box-title">You're creating a new project</h3>
            }
        }
    </div>
    <div class="box-body">
        <div class="col-md-8">
            <form asp-action="CreateNew" method="post" role="form">
                <input asp-for="ProjectCode" type="hidden" />
                <input asp-for="ProjectId" type="hidden" />

                <div class="box-body">
                    <div class="form-group">
                        <label for="projectName">Project Name</label>
                        <input asp-for="ProjectName" class="form-control" id="projectName" placeholder="Enter project name" type="text">
                        <div>
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea rows="5" asp-for="Description" class="form-control" id="description"></textarea>
                        <div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-flat btn-success">Submit</button>
                </div>
                
            </form>
        </div>
    </div>
</div>
