@model ProjectModel
<div class="box-body">
    <div class="col-md-8">
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label for="projectName">Project Name</label>
                    <input asp-for="ProjectName" class="form-control" id="projectName" placeholder="Enter project name" type="text">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea rows="5" asp-for="Description" class="form-control" id="description"></textarea>
                </div>
            </div>
            <!-- /.box-body -->
        </form>
    </div>
    <div class="col-md-4">
        <div class="callout callout-success">
            <h4>Your project information:</h4>
            <p><i class="fa fa-qrcode"></i><span class="space-left"><b>Project Code</b>: @Model.ProjectCode</span></p>
            <p><i class="fa fa-book"></i><span class="space-left"><b>Project Name</b>: @Model.ProjectName</span></p>
            <p><i class="fa fa-user-circle"></i><span class="space-left"><b>Owner</b>: @Model.Owner.DisplayName</span></p>
            <p><i class="fa fa-bell-slash-o"></i><span class="space-left"><b>Status</b>: @Model.Status</span></p>
            @if (Model.Status == ProjectStatus.Pending)
            {
                <p><i class="fa fa-hand-o-right"></i><span class="space-left"><b>Note</b>: Currently your project is pending now so please go to project detail page and change your project status</span></p>
            }
        </div>
    </div>
</div>