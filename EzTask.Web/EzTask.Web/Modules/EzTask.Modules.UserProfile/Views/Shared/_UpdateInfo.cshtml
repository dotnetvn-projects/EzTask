@model AccountInfoModel

<form asp-action="UpdateInfo" asp-controller="UserProfile" class="form-horizontal">
    <input asp-for="AccountInfoId" type="hidden" />
    <input asp-for="AccountId" type="hidden" />
    <input asp-for="AccountName" type="hidden" />
    <input asp-for="Password" type="hidden" />

    <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" id="inputName" placeholder="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputNickName" class="col-sm-2 control-label">Nick Name</label>
        <div class="col-sm-10">
            <input asp-for="DisplayName" class="form-control" id="inputNickName" placeholder="Your nick name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputJobTitle" class="col-sm-2 control-label">Job Title</label>
        <div class="col-sm-10">
            <input asp-for="JobTitle" class="form-control" id="inputJobTitle" placeholder="Your nick name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPhone" class="col-sm-2 control-label">Phone Number</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" id="inputPhone" placeholder="Phone number">
        </div>
    </div>
    <div class="form-group">
        <label for="inputBirthDay" class="col-sm-2 control-label">Day Of Birth</label>
        <div class="col-sm-10">
            <div class="input-group date">
                <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </div>
                <input asp-for="BirthDay" class="form-control pull-right datepicker" id="inputBirthDay" type="text">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress1" class="col-sm-2 control-label">Address 1</label>
        <div class="col-sm-10">
            <input asp-for="Address1" class="form-control" id="inputAddress1" placeholder="Address 1">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress2" class="col-sm-2 control-label">Address 1</label>
        <div class="col-sm-10">
            <input asp-for="Address2" class="form-control" id="inputAddress2" placeholder="Address 2">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAboutYou" class="col-sm-2 control-label">About you</label>
        <div class="col-sm-10">
            <textarea asp-for="Introduce" class="form-control" id="inputAboutYou" placeholder="About you"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEducation" class="col-sm-2 control-label">Education</label>
        <div class="col-sm-10">
            <textarea asp-for="Education" class="form-control" id="inputEducation" placeholder="Education"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="inputSkills" class="col-sm-2 control-label">Skills</label>
        <div class="col-sm-10">
            <input asp-for="Skills" type="text" class="form-control" id="inputSkills" placeholder="Skills">
            <p>
                Example: Management, Coding, C#, Java
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input asp-for="IsPublished" type="checkbox"> I agree to publish my profile to everyone
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Submit</button>
        </div>
    </div>
</form>