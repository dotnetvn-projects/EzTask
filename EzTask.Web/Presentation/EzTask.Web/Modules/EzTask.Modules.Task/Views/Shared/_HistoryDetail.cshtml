@model TaskHistoryModel

<div class="modal fade" id="task-history-detail">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Task <b>'@Model.Task.TaskTitle'</b></h4>
            </div>

            <div class="modal-body">
                <div class="inner">
                    @Html.Raw(Model.Content)
                </div>             
            </div>
            <div class="modal-footer">
                <button type="submit" data-dismiss="modal" class="btn btn-primary btn-confirm">Close</button>
            </div>
        </div>
    </div>
</div>