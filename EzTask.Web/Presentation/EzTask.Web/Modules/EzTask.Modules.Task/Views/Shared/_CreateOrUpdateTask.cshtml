@model TaskItemViewModel
@{
    string action = "taskitem/" + Model.ActionType + ".html";
}
<div class="modal fade" data-backdrop="static" data-keyboard="false" id="task-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @if (Model.ActionType == ActionType.CreateNew)
                {
                    <h4 class="modal-title">Create new task</h4>
                }
                else
                {
                    <h4 class="modal-title">Update task'@Model.TaskTitle'</h4>
                }
            </div>
            <form asp-action="@Model.ActionType" method="post" id="task-form" class="form-horizontal">
                <input type="hidden" asp-for="TaskId" />
                <input type="hidden" asp-for="TaskCode" />
                <input type="hidden" asp-for="ProjectId" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputTaskTitle" class="col-sm-2 control-label">Task Title</label>
                        <div class="col-sm-9">
                            <input asp-for="TaskTitle" class="form-control" id="inputTaskTitle" placeholder="Task title" />
                            <p><span asp-validation-for="TaskTitle" class="text-danger"></span></p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="selectPhraseList" class="col-sm-2 control-label">Phrase / Priority  </label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-sm-6">
                                    <select asp-for="PhraseId" asp-items="@Model.PhraseList" id="selectPhraseList" class="form-control select2"></select>
                                </div>
                                <div class="col-sm-3">
                                    <select asp-for="Priority" asp-items="@Model.PriorityList" id="selectPriority" class="form-control select2"></select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectTaskStatusList" class="col-sm-2 control-label">Status  </label>
                        <div class="col-sm-9">
                            <select asp-for="Status" asp-items="@Model.StatusList" id="selectTaskStatusList" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectAssignList" class="col-sm-2 control-label">Assign To</label>
                        <div class="col-sm-9">
                            <select asp-for="Assignee" asp-items="@Model.AssigneeList" id="selectAssignList" class="form-control select2"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_detail" data-toggle="tab" aria-expanded="true">Details</a></li>
                                @if (Model.TaskId > 0)
                                {
                                    <li class=""><a href="#tab_attachment" data-toggle="tab" aria-expanded="false">Attachment</a></li>
                                    <li class=""><a href="#tab_history" data-toggle="tab" aria-expanded="false">History</a></li>
                                }
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_detail">
                                    <textarea asp-for="TaskDetail" style="height:300px; width:100%;"></textarea>
                                </div>
