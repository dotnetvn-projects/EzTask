@{
    ViewBag.Title = "EzTask - "+ Html.GetStringResource("LoginPageTitle", StringResourceType.AuthenticationPage);
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@section styles{
    <link rel="stylesheet" href="~/authen/css/authen.css">
}
@model LoginViewModel
<p class="login-box-msg">@Html.GetStringResource("SignInTitle", StringResourceType.AuthenticationPage)</p>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="RedirectUrl" />
    <div class="text-danger"><span>@Html.PrintErrorMessage()</span></div>
    <div class="form-group has-feedback">
        <input asp-for="AccountName" class="form-control" placeholder="@Html.GetStringResource("Email", StringResourceType.AuthenticationPage)">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <div>
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group has-feedback">
        <input asp-for="Password" type="password" class="form-control" placeholder="@Html.GetStringResource("Password", StringResourceType.AuthenticationPage)">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input asp-for="RememberMe" type="checkbox"> @Html.GetStringResource("RememberMe", StringResourceType.AuthenticationPage)
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">@Html.GetStringResource("SignIn", StringResourceType.AuthenticationPage)</button>
        </div>
        <!-- /.col -->
    </div>
</form>

<a href="recover-password.html">@Html.GetStringResource("ForgotPassword", StringResourceType.AuthenticationPage)</a><br>
<a href="register.html" class="text-center">@Html.GetStringResource("Register", StringResourceType.AuthenticationPage)</a>