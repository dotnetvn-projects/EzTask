@{
    ViewBag.Title = "EzTask - " + Html.GetStringResource("RecoverPasswordPageTitle", StringResourceType.AuthenticationPage);
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@section styles{
    <link rel="stylesheet" href="~/authen/css/authen.css">
}
@model RecoverPasswordViewModel
<p class="login-box-msg">@Html.GetStringResource("RecoverPasswordTitle", StringResourceType.AuthenticationPage)</p>

<form asp-action="RecoverPassword" method="post">
    <div class="text-danger"><span>@Html.PrintErrorMessage()</span></div>
    <div class="form-group has-feedback">
        <input asp-for="Email" class="form-control" placeholder="@Html.GetStringResource("Email", StringResourceType.AuthenticationPage)">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <div><span asp-validation-for="Email" class="text-danger"></span> </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">@Html.GetStringResource("Submit", StringResourceType.AuthenticationPage)</button>
        </div>
    </div>
</form>

<a href="login.html" class="text-center">@Html.GetStringResource("AlreadyHaveAccount", StringResourceType.AuthenticationPage)</a><br>
<a href="register.html" class="text-center">@Html.GetStringResource("Register", StringResourceType.AuthenticationPage)</a>