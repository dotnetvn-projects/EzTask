@model IEnumerable<List<ProjectViewModel>>
@foreach (var projects in Model)
{
    <div class="row">
        @foreach (var item in projects)
        {
            var taskCount = item.Project.ProjectCode + " has " + Html.PrintNumberWithText("task", item.TotalTask);
            <div class="col-md-4">
                <div class="box box-@item.Project.BoxType direct-chat direct-chat-@item.Project.BoxType">
                    <div class="box-header with-border">
                        <h3 class="box-title">@item.Project.ProjectCode</h3>

                        <div class="box-tools pull-right">
                            <span data-toggle="tooltip" title="@taskCount" class="badge bg-@item.Project.Color" data-original-title="@taskCount">@item.TotalTask</span>
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="member list" data-widget="chat-pane-toggle" data-original-title="Contacts">
                                <i class="fa fa-user"></i>
                            </button>
                            @if (User.Identity.AccountId() == item.Project.Owner.AccountId)
                            {
                                <a asp-action="Update" asp-controller="Project" asp-route-code="@item.Project.ProjectCode" class="btn btn-box-tool" title="Edit"><i class="fa fa-edit"></i></a>
                                <button data-source="@item.Project.ProjectName" data-code="@item.Project.ProjectCode" type="button" class="btn btn-box-tool remove-project" title="Delete"><i class="fa fa-times"></i></button>
                            }
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body" style="">
                        <div class="project-item">
                            <div>
                                <i class="fa fa-book"></i><b> Project Name</b>:
                                <div class="name">
                                    <span>@item.Project.ProjectName</span>
                                </div>
                            </div>

                            <div>
                                <i class="fa fa-audio-description"></i><b> Project Description</b>:
                                <div class="description">
                                    <span>@item.Project.Description</span>
                                </div>
                            </div>
                            <div>
                                <i class="fa fa-user-circle"></i><b> Owner</b>:
                                <div class="description">
                                    <span>@item.Project.Owner.DisplayName is owner of project</span>
                                </div>
                            </div>
                            <div>
                                <i class="fa fa-calendar"></i><b> Created date</b>:
                                <div class="description">
                                    <span>Project was created at @item.Project.CreatedDate.ToString("MM/dd/yyyy")</span>
                                </div>
                            </div>
                        </div>
                        @if (item.Members.Any())
                        {
                            <div class="direct-chat-contacts">
                                <ul class="contacts-list">
                                    @foreach (var mem in item.Members)
                                    {
                                        <li>
                                            <a href="#">
                                                <img class="contacts-list-img" src="@Url.Action("LoadAvatar","Common", new {accountId = mem.AccountId })" alt="User Image">

                                                <div class="contacts-list-info">
                                                    <span class="contacts-list-name">
                                                        @mem.DisplayName
                                                        <small class="contacts-list-date pull-right">@mem.AddDate.ToString("dd/MM/yyyy")</small>
                                                    </span>
                                                    @if (mem.IsPending)
                                                    {
                                                        <span class="contacts-list-msg">Pending for accepting</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="contacts-list-msg">Linh pham is having @Html.PrintNumberWithText("task", mem.TotalTask)</span>
                                                    }
                                                </div>
                                            </a>
                                        </li>
                                    }
                                </ul>
                                <a title="Add new member" data-id="@item.Project.ProjectId" class="btn btn-default btn-success btn-circle btn-add-member">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer" style="">
                        <i class="fa fa-circle text-@item.Project.Color"></i> @item.Project.Status.ToString()
                        <a asp-action="Index" asp-controller="ProjectDetail"
                           asp-route-code="@item.Project.ProjectCode" class="btn btn-flat btn-@item.Project.BoxType btn-sm pull-right">
                            <span><i class="fa fa-hand-o-right"></i> View Detail</span>
                        </a>
                    </div>
                    <!-- /.box-footer-->
                </div>
            </div>
        }
    </div>
}