@model PhraseViewModel
<div class="modal fade" id="phrase-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @if (Model.PhraseId <= 0)
                {
                    <h4 class="modal-title">Add new phrase</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit phrase '@Model.PhraseName'</h4>
                }

            </div>
            <form id="phrase-form" class="form-horizontal">
                <input asp-for="ProjectId" class="project-id" type="hidden" />
                <input asp-for="PhraseId" class="phrase-id" type="hidden" />
                <input asp-for="IsDefault" class="phrase-default" type="hidden" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputPhraseName" class="col-sm-3 control-label">Phrase Name</label>
                        <div class="col-sm-9">
                            <input asp-for="PhraseName" class="form-control" id="inputPhraseName" placeholder="Phrase name">
                            <p><span asp-validation-for="PhraseName" class="text-danger"></span></p>
                        </div>
                    </div>
                    @if (Model.PhraseId > 0)
                    {
                        <div class="form-group">
                            <label for="selectStatusList" class="col-sm-3 control-label">Status  </label>
                            <div class="col-sm-9">
                                <select asp-for="Status" asp-items="@Model.StatusList" id="selectStatusList" class="form-control select2"></select>
                            </div>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Status" class="phrase-status" type="hidden" />
                    }
                    @if (!Model.IsDefault)
                    {
                        <div class="form-group">
                            <label for="inputStartDate" class="col-sm-3 control-label">Start date</label>
                            <div class="col-sm-9">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input asp-for="StartDate" class="form-control pull-right datepicker" id="inputStartDate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEndDate" class="col-sm-3 control-label">End date</label>
                            <div class="col-sm-9">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input asp-for="EndDate" class="form-control pull-right datepicker" id="inputEndDate" type="text">
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                    }
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-confirm">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>