@model IEnumerable<AttachmentModel>
@{ 

    var totalItems = 0;
    if (Model != null)
    {
        totalItems = Model.Count();
    }
}
<div class="content-container">
    <div class="row attachment-header">
        <div class="col-sm-5 col-xs-8">
            <h4 class="text-light-blue">Attachments</h4>
            @if (totalItems > 0)
            {
                <h5 class="text-red small">There are @totalItems attached items</h5>
            }
            else
            {
                <h5 class="text-red small">There are not any attached item</h5>
            }
        </div>
        
        <div class="col-sm-7 col-xs-4">
            <div class="pull-right upload-file">
                <label for="file-upload">
                    <a class="btn btn-app btn-xs">
                        <i class="fa fa-cloud-upload"></i> Upload file
                    </a>
                </label>
                <input id="file-upload" type="file" />
            </div>
            @*<div class="row">
                <div class="col-sm-3 col-xs-3">
                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                        <span class="sr-only">20% Complete</span>
                    </div>
                </div>

            </div>*@
        </div>
    </div>
    <div class="row attachment-list">
        @if (Model != null && Model.Any())
        {
            var i = 1;
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Files</th>
                        <th style="width: 150px"></th>
                        <th style="width: 130px"></th>
                        <th style="width: 60px"></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i.</td>
                            <td>@item.FileName</td>
                            <td><i class="fa fa-user text-green"></i> @item.User.DisplayName</td>
                            <td><i class="fa fa-calendar-check-o"></i> @item.AddedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="row">
                                    <a href="/"><span class="badge bg-yellow"><i class="fa fa-save"></i></span></a>
                                    <a href="/"><span class="badge bg-red"><i class="fa fa-remove"></i></span></a>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }                    
                </tbody>
            </table>
        }
    </div>
</div>