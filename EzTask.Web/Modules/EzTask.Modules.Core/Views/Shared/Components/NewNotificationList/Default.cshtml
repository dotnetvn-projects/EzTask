@model IEnumerable<NotificationModel>

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o"></i>
    <span class="label label-warning">@Model.Count()</span>
</a>

<ul class="dropdown-menu">
    <li class="header">
        @string.Format(Html.GetStringResource("NotifyCount",
             StringResourceType.Notification).ToString(), Model.Count())
    </li>
    @if (Model.Any())
    {
        <li>
            <ul class="menu">
                @foreach (var item in Model)
                {
                <li>
                    <a href="#">
                        <i class="fa fa-users text-aqua"></i> @item.Content
                    </a>
                </li>
                }
            </ul>
        </li>

    }
    else
    {
        <li>
            <ul class="menu">
                <li>
                    <a href="#">
                        <i class="fa fa-users text-aqua"></i> @Html.GetStringResource("EmptyNotification", StringResourceType.Notification)
                    </a>
                </li>
            </ul>
        </li>
    }
    <li class="footer"><a href="#">@Html.GetStringResource("ViewAll", StringResourceType.Common)</a></li>

</ul>