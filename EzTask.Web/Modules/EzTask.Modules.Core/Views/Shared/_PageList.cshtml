@model PageListModel

@if (Model != null && Model.Pages !=null && Model.Pages.Any())
{
<ul class="pagination @Model.Css">
    @if (Model.CurrentPage != 1)
    {
        <li><a data-page = "1">First</a></li>
        <li><a data-page = "@(Model.CurrentPage - 1)">Previous</a></li>
    }

    @foreach (var pageItem in Model.Pages)
    {
        string active = "";
        if (Model.CurrentPage == pageItem)
        {
            active = "active";
        }
        <li class="@active"><a data-page = "@pageItem">@pageItem</a></li>
    }

    @if (Model.CurrentPage != Model.TotalPage)
    {
        <li><a data-page = "@(Model.CurrentPage + 1)">Next</a></li>
        <li><a data-page = "@Model.TotalPage">Last</a></li>
    }
</ul>
}
